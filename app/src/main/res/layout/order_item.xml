<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvOrderTitle"
            style="@style/TextAppearance_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:lines="1"
            android:padding="@dimen/padding_small"
            cardView:layout_constraintLeft_toLeftOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            tools:text="Order 1" />

        <TextView
            android:id="@+id/tvOrderCreation"
            style="@style/TextAppearance_Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="5dp"
            cardView:layout_constraintLeft_toLeftOf="@id/tvOrderTitle"
            cardView:layout_constraintTop_toBottomOf="@+id/tvOrderTitle"
            tools:text="August 24, 13:00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>